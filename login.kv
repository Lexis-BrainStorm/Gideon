<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        canvas:
            Rectangle:
                source:'background.png'
                pos:self.pos
                size:self.size

        Label:
            text: 'Welcome To Gideon'
            font_size: 35
            color:0,0,1,1
        FloatLayout:
            FloatLayout:
                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Ellipse:
                        pos: root.width/2 - 150/2, self.height/2 - 350/2 + 300*1.5
                        size: 150, 150
                        source: 'mainmenu.png'
                        angle_start: 0
                        angle_end: 360

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28
                hint_text:'UserName'
                background_color:0,0,1,1
                size_hint_y:None
                height:40

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
                hint_text:'password'
                background_color:0,0,1,1
                size_hint_y:None
                height:40

        Button:
            text: 'Login'
            font_size: 24
            background_color:0,0,1,1
            text: 'Login'
            font_size: 24


            on_press: root.do_login(login.text, password.text)
    FloatLayout:
        size_hint:.9,.9
        Label:
            pos_hint:{'left':1,'bottom':1}
            text:'Sign UP'
            font_size:20
            size_hint_y:None
            height:40
            size_hint_x:None
            width:340
            color:0,0,1,1


        Button:
            pos_hint:{'right':1,'bottom':1}
            text:'Register'
            size_hint_y:None
            height:30
            size_hint_x:None
            width:120
            background_normal:'button_normal.png'
            background_down:''
            on_press:root.register_screen()

